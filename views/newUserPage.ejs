<body>
    <div class="container">
        <div class="row d-flex justify-content-center" style="margin-top: 1rem;">
            <form class="col-6 col-md-4 border border-primary" style="padding-bottom:  0.5rem;" action="/users" method="POST">
                <div class="form-group">
                    <label for="user">User name</label>
                    <input type="text" class="form-control" id="user" placeholder="Enter user name" name="r[user]">
                </div>
                <div class="form-group">
                    <label for="pwd">Password</label>
                    <input type="text" class="form-control" id="pwd" aria-describedby="pwdHelp" placeholder="Password" name="r[pwd]">
                    <small id="pwdHelp" class="form-text text-muted">We'll never share your pwd with anyone else.</small>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
